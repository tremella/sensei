<% name = current_user.present? ? current_user.email : 'Stranger' %>
<% if current_user.present? %>
    <% if current_user.is_coach %>
        <h1>Welcome, coach <%= name %> </h1>
        <%= link_to 'setup new availability slot', new_slot_path %>
    <% else %>
        <h1>Welcome, student <%= name %> </h1>
    <% end %>
<% end %>
